{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vigil.example.com/schemas/audit_event.schema.json",
  "title": "AuditEvent",
  "description": "Schema for audit events across all SDKs. Matches AuditEvent.to_dict() output.",
  "type": "object",
  "required": ["event_id", "timestamp", "version", "action"],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier (UUID v4)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the event occurred"
    },
    "version": {
      "type": "string",
      "default": "1.0.0",
      "description": "Schema version"
    },
    "session": {
      "type": "object",
      "description": "Session context information",
      "properties": {
        "session_id": { "type": "string" },
        "request_id": { "type": "string" },
        "correlation_id": { "type": "string" }
      },
      "additionalProperties": false
    },
    "actor": {
      "type": "object",
      "description": "Actor (user/system) context",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["user", "system", "service", "anonymous"],
          "default": "anonymous"
        },
        "id": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "roles": {
          "type": "array",
          "items": { "type": "string" }
        },
        "ip_address": { "type": "string" },
        "user_agent": { "type": "string" }
      },
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "description": "Action context",
      "required": ["type", "category"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["READ", "WRITE", "UPDATE", "DELETE", "EXECUTE", "CREATE", "LOGIN", "LOGOUT", "ACCESS", "MODIFY", "GRANT", "REVOKE", "APPROVE", "REJECT"],
          "description": "Action type"
        },
        "category": {
          "type": "string",
          "enum": ["DATABASE", "API", "AUTH", "FILE", "SYSTEM", "NETWORK", "SECURITY", "COMPLIANCE", "USER", "ADMIN"],
          "description": "Action category"
        },
        "operation": {
          "type": "string",
          "description": "Specific operation name"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the action"
        },
        "resource": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["table", "file", "endpoint", "function"]
            },
            "id": { "type": "string" },
            "name": { "type": "string" },
            "path": { "type": "string" }
          },
          "additionalProperties": false
        },
        "parameters": {
          "type": "object",
          "description": "Action parameters (key-value pairs)",
          "additionalProperties": true
        },
        "result": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["SUCCESS", "FAILURE", "PARTIAL"],
              "default": "SUCCESS"
            },
            "code": { "type": "string" },
            "message": { "type": "string" },
            "rows_affected": { "type": "integer" },
            "data_size_bytes": { "type": "integer" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "performance": {
      "type": "object",
      "description": "Performance metrics",
      "properties": {
        "duration_ms": { "type": "number" },
        "cpu_time_ms": { "type": "number" },
        "memory_mb": { "type": "number" },
        "slow_query": { "type": "boolean", "default": false },
        "threshold_exceeded": { "type": "boolean", "default": false }
      },
      "additionalProperties": false
    },
    "error": {
      "type": "object",
      "description": "Error information",
      "properties": {
        "occurred": { "type": "boolean", "default": false },
        "type": { "type": "string" },
        "message": { "type": "string" },
        "stack_trace": { "type": "string" },
        "handled": { "type": "boolean", "default": true }
      },
      "additionalProperties": false
    },
    "system": {
      "type": "object",
      "description": "System/host information",
      "additionalProperties": true
    },
    "custom": {
      "type": "object",
      "description": "Custom fields",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "description": "Event metadata (application, environment, etc.)",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
